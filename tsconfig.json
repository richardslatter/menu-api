{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "outDir": "./build"
  }
}
